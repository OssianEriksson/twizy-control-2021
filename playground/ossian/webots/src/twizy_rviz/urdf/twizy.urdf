<?xml version="1.0"?>

<robot name="twizy">
    <link name="base_link" />

    <link name="body">
        <visual>
            <geometry>
                <box size="1 1.8 1.5" />
            </geometry>
        </visual>
    </link>
    <joint name="body_joint" type="fixed">
        <origin xyz="0 0 -0.75" />
        <parent link="base_link" />
        <child link="body" />
    </joint>

    <link name="front_realsense" />
    <joint name="front_realsense:joint" type="fixed">
        <origin xyz="0 0.9 0.75" />
        <parent link="body" />
        <child link="front_realsense" />
    </joint>
</robot>