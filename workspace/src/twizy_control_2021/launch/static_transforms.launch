<?xml version="1.0"?>
<launch>
    <arg name="model" default="$(find twizy_description)/urdf/twizy.urdf.xacro"/>
   
    <param name="robot_description" command="$(find xacro)/xacro $(arg model)" />

    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" required="true" />
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" required="true" />

    <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_broadcaster" args="0 0 0 0 0 0 1 odom base_link" />
</launch>